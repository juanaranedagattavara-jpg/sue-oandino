{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "Sueño Andino",
  "description": "Tema WordPress Block Theme para Sueño Andino",
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "palette": [
        {
          "color": "#2c5530",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#8b4513",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#d4af37",
          "name": "Accent",
          "slug": "accent"
        },
        {
          "color": "#333333",
          "name": "Text",
          "slug": "text"
        },
        {
          "color": "#ffffff",
          "name": "Background",
          "slug": "background"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, sans-serif",
          "name": "Inter",
          "slug": "inter"
        },
        {
          "fontFamily": "Playfair Display, serif",
          "name": "Playfair Display",
          "slug": "playfair"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "size": "0.875rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "1rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "1.25rem",
          "slug": "large"
        },
        {
          "name": "Extra Large",
          "size": "1.5rem",
          "slug": "x-large"
        },
        {
          "name": "Huge",
          "size": "2rem",
          "slug": "huge"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingUnits": ["px", "em", "rem", "vh", "vw", "%"],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "1.5rem"
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
